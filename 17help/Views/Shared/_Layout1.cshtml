    <link href="~/css/content.css" rel="stylesheet" />
    <link href="~/css/footer.css" rel="stylesheet" />
    <style type="text/css">
        .message {
            clear: both;
            margin-top: 68px;
            background-color: #eee;
            padding: 5px 20px;
        }

            .message a {
                color: #31708f;
                text-decoration: none;
            }

            .message > a {
                float: right;
            }

        .help {
            position: fixed;
            right: 5%;
            bottom: 12%;
        }

            .help li {
                border: 1px solid;
                margin: 2px;
                padding: 2px;
                background-color: rgba(128,255,212,0.7);
                list-style: none;
                border-radius: 4px;
            }

        .contain {
            margin-left: 200px;
            margin-right: 100px;
        }
