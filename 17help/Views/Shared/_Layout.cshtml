    <div class="content">
        @RenderBody()
    </div>
    <div class="help">
        <ul>
            <li><a href="#">帮助</a></li>
            <li><a href="#">反馈</a></li>
        </ul>
    </div>
    <div class="footer">
        <hr id="hr" />
        <p>
